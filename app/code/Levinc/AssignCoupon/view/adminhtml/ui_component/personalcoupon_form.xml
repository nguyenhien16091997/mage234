                                            <item name="targetName" xsi:type="string">index = coupon_grid</item>
                                            <item name="actionName" xsi:type="string">save</item>
                                        </item>
                                        <item name="1" xsi:type="string">closeModal</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
                <insertListing name="coupon_grid">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="cssclass" xsi:type="string">coupon-grid-insert-listing</item>
                            <item name="dataScope" xsi:type="string">coupon_container</item>
                            <item name="autoRender" xsi:type="boolean">true</item>
